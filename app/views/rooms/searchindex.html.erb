<p><%= @count %>件が見つかりました</p>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>住所</th>
      <th>紹介文</th>
      <th>料金</th>
      
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
       <% if room.image?%>
        <td><%= image_tag room.image.url, size: "100x70" ,alt: "アイコン"%></td>
         <% else %>
         <td><%= image_tag ("noimage.png"), size: "100x70", alt: "アイコン"%></td>
         <% end %>
        <td><%= room.name %></td>
        <td><%= room.adress %></td>
        <td><%= room.introduction %></td>
        <td>¥<%= room.price %>~</td>
        <td><%= link_to "詳細", room %></td>
      </tr>
    <% end %>
  </tbody>
</table>